<NewCalibrationPage>:
    name: "newCalibPage"
    GridLayout:
        cols: 1
        spacing: 0
        Label:
            id: calibrationTitle
            text: "Add New Calibration"
            size_hint_y: 0.35
            font_name: "NexaHeavy"
            font_size: '32pt'

        # ===========================

        BoxLayout:
            padding_y: 0
            size_hint_y: 0.2
            orientation: 'horizontal'
            Widget:
                size_hint_x: 0.3
            Label:
                id: nominalValue_label
                text: "Nominal Value (from wash profile): "
                font_name: "NexaLight"
                font_size: '20pt'
                width: self.texture_size[0]
            Label:
                id: nominalValue
                text: "15%"
                font_name: "NexaHeavy"
                font_size: '20pt'
                width: self.texture_size[0]
            Widget:
                size_hint_x: 0.3

        # ===================================

        Label:
            id: checklistTitle
            text: "Checklist:"
            font_name: "NexaHeavy"
            font_size: '20pt'
            size_hint_y: 0.15
        # ===================================
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: 0.4  # or however much vertical space you want it to take

            ScrollView:

                BoxLayout:
                    id: checklist_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 10

        BoxLayout:
            padding: 20
            spacing: 20
            size_hint_y: 0.4
            orientation: 'horizontal'
            Button:
                text: "Cancel"
                font_name: "NexaHeavy"
                font_size: '24pt'
                background_color: (225/255, 219/255, 210/255, 1)
                on_release: 
                    root.cancelButtonClicked()
                    #root.manager.transition.direction = "right"
            Button:
                id: go_button
                text: "GO"
                font_name: "NexaHeavy"
                font_size: '24pt'
                background_normal: '' # DO THIS TO MAKE BUTTON NOT DARKER
                background_color: [247/255, 187/255, 112/255, 1]
                opacity: 0
                disabled: True
                on_release: 
                    #add yes/no confirmation pop-up
                    root.newCalibGoClicked()
