<AddBoardsScreen>:
    name: 'boards_list'
    on_enter: item_input.focus = True
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1.0, 0.2)
